{% extends 'base.html.twig' %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block title %}scribo-creation-article{% endblock title %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/editorCreationArticle.js') }}"></script>
{% endblock javascripts %}

{% block body %}
  <div class="container createArticle">
    {% include "@CKSourceCKFinder/setup.html.twig" %}
    <h5 class="cardCArticle"> Cr√©ation d'un article</h5>
      {{ form_start(formArticle) }}
        <span class="badge badge-warning">Titre</span>
        {{ form_widget(formArticle.title,  { 'attr' : {'placeholder' : 'Titre de l\'article'}}, { 'required' : 'required' }) }}
          <small>
            {{ form_help(formArticle.title,
            { 'attr' : {'placeholder' : 'Titre de l\'article'}}, { 'required' : 'required' }) }}
          </small>
        <span class="badge badge-info">Contenu</span>
        <div class="form-group">
          {{ form_widget(formArticle.content, { 'attr' : {'placeholder' : 'Contenu de l\'article', 'class' : 'ckeditor'}}, { 'id' : 'editor' }, {'name' : 'editor'}) }}
        </div>
        <span class="badge badge-info"> {{ form_label(formArticle.categories) }}</span>
        <div class="form-group">
          {{ form_widget(formArticle.categories) }}
        </div>
        <div class="form-group">
           <span class="badge badge-dark">Image</span>
          {{ form_widget(formArticle.image,
          { 'attr' : {'placeholder' : 'Image de l\'article' } }, { 'required' : 'required' }) }}
        </div>
        <button type="submit" id='butSubmit' class="btn btn-success">
          {% if modeAction %}
            Ajouter l'article
          {% else %}
            Modifier l'article
          {% endif %}
        </button>
      {{ form_end(formArticle) }}
  </div>
{% endblock %}


